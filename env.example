# Discord
DISCORD_TOKEN=Bot <your_discord_bot_token>
CHANNEL_ID=<discord_channel_id>

# Bybit API (create API key with Futures/Unified permissions)
BYBIT_API_KEY=<key>
BYBIT_API_SECRET=<secret>
BYBIT_TESTNET=false
ACCOUNT_TYPE=UNIFIED

# Trading (Bybit V5)
CATEGORY=linear
QUOTE=USDT
LEVERAGE=5
RISK_PCT=5

# Limits / Safety
MAX_CONCURRENT_TRADES=3
MAX_TRADES_PER_DAY=20
TC_MAX_LAG_SEC=300

# Entry rules
ENTRY_EXPIRATION_MIN=180
ENTRY_TOO_FAR_PCT=0.5
ENTRY_TRIGGER_BUFFER_PCT=0.0
ENTRY_LIMIT_PRICE_OFFSET_PCT=0.0

# If market already beyond trigger by this %, skip (extra safety)
ENTRY_EXPIRATION_PRICE_PCT=0.6

# SL/TP
MOVE_SL_TO_BE_ON_TP1=true
TP_SPLITS=30,30,30,10
# Trailing starts after TP3 fill, only on remaining split (usually 10%)
TRAIL_AFTER_TP_INDEX=3
TRAIL_DISTANCE_PCT=2.0
TRAIL_ACTIVATE_ON_TP=true

# DCA (multipliers vs BASE qty)
DCA_QTY_MULTS=1.5,2.25,3.0

# Timing
POLL_SECONDS=15
POLL_JITTER_MAX=5
RECV_WINDOW=5000

# Misc
DRY_RUN=true
STATE_FILE=state.json
LOG_LEVEL=INFO
